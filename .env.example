# FireWatch AI Configuration
# Copy this file to .env and fill in your values

# NASA FIRMS API Key (required)
# Get yours at: https://firms.modaps.eosdis.nasa.gov/api/area/
FIRMS_API_KEY=your_api_key_here

# Application Settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Database (Phase 2)
# DATABASE_URL=postgresql://user:password@localhost:5432/firewatch
# REDIS_URL=redis://localhost:6379

# Email Alerts (Phase 2)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# Weather APIs (Phase 2)
# OPENWEATHERMAP_API_KEY=your_key_here
